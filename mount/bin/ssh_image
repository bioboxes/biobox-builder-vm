#!/bin/bash

set -o xtrace
set -o errexit
set -o nounset

if [[ -z "$1" ]]; then
  echo "Please supply an image" >&2
  exit 1
fi

IMAGE=$1
IN_DIR=${HOME}/data
OUT_DIR=$(mktemp -d)
CONTAINER_FILE="$(mktemp -d)/cidfile"

finish(){
  docker rm $(cat ${CONTAINER_FILE})
  echo ${OUT_DIR}
}
trap finish EXIT

docker run \
  --volume ${IN_DIR}:/inputs:ro \
  --volume ${OUT_DIR}:/outputs:rw \
  --cidfile="${CONTAINER_FILE}" \
  --interactive \
  --tty \
  --entrypoint="/bin/bash" \
  ${IMAGE} \
  --login

